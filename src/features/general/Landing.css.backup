  background-color: #050505;
  padding: 4rem 0 2rem;
  border-top: 1px solid #222;
}

.footer-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 3rem;
  margin-bottom: 3rem;
  text-align: left;
}

.footer-column h3 {
  color: var(--primary-gold);
  font-size: 1.2rem;
  margin-bottom: 1.5rem;
  position: relative;
  display: inline-block;
}

.footer-column h3::after {
  content: "";
  display: block;
  width: 30px;
  height: 2px;
  background: var(--secondary-gold);
  margin-top: 0.5rem;
}

.footer-brand h2 {
  color: var(--primary-gold);
  font-size: 2rem;
  letter-spacing: 3px;
  margin-bottom: 0;
}

.footer-brand span {
  color: var(--text-dim);
  font-size: 0.8rem;
  letter-spacing: 4px;
  text-transform: uppercase;
  display: block;
  margin-bottom: 1rem;
}

.footer-desc {
  color: #666;
  font-size: 0.9rem;
  line-height: 1.6;
}

.footer-links,
.footer-contact {
  list-style: none;
}

.footer-links li,
.footer-contact li {
  margin-bottom: 0.8rem;
}

.footer-links a {
  color: #ccc;
  text-decoration: none;
  transition: color 0.3s ease;
  font-size: 0.95rem;
}

.footer-links a:hover {
  color: var(--primary-gold);
  padding-left: 5px;
}

.footer-contact li {
  color: #ccc;
  font-size: 0.95rem;
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.footer-contact i {
  color: var(--primary-gold);
}

.footer-icons {
  display: flex;
  gap: 1.5rem;
  margin-top: 1rem;
}

.footer-icons img {
  width: 35px;
  height: 35px;
  border-radius: 50%;
  transition: transform 0.3s ease;
  filter: grayscale(100%);
  border: 1px solid #333;
}

.footer-icons a:hover img {
  transform: scale(1.1);
  filter: grayscale(0%);
  border-color: var(--primary-gold);
}

.footer-bottom {
  text-align: center;
  padding-top: 2rem;
  border-top: 1px solid #222;
  color: #444;
  font-size: 0.85rem;
}

/* =============================
   RESPONSIVE
   ============================= */
@media (max-width: 768px) {
  .navbar {
    padding: 1rem;
    background: rgba(10, 10, 10, 0.95);
  }

  .hamburger-menu {
    display: flex;
  }

  .nav-menu {
    position: fixed;
    top: 70px;
    left: -100%;
    width: 100%;
    height: calc(100vh - 70px);
    background: #0a0a0a;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    transition: 0.3s ease;
    border-top: 1px solid #222;
  }

  .nav-menu.active {
    left: 0;
  }

  .nav-links {
    flex-direction: column;
    gap: 2rem;
  }

  .nav-links li a {
    font-size: 1.2rem;
  }

  .hero-logo {
    font-size: 3rem;
  }

  .hero-subtitle {
    font-size: 1rem;
  }

  .section-title {
    font-size: 2.2rem;
  }

  .filtros-container {
    flex-direction: column;
    align-items: center;
  }

  .search-wrapper,
  .select-categoria {
    width: 100%;
    max-width: 300px;
  }

  .footer-grid {
    text-align: center;
  }

  .footer-column h3::after {
    margin: 0.5rem auto 0;
  }

  .footer-contact li {
    justify-content: center;
  }

  .footer-icons {
    justify-content: center;
  }
}