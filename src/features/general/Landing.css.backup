/* =============================
   RESET Y BASE
   ============================= */
@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600&family=Playfair+Display:ital,wght@0,400;0,600;0,700;1,400&display=swap');

:root {
  --primary-gold: #d4a574;
  --secondary-gold: #b48b5e;
  --dark-bg: #0a0a0a;
  --card-bg: #141414;
  --text-light: #f3f3f3;
  --text-dim: #a0a0a0;
  --accent-red: #8a2be2;
  /* Not used much, but kept for reference */
  --btn-color: #b45309;
  --btn-hover: #92400e;
}

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html {
  scroll-behavior: smooth;
}

body {
  font-family: 'Montserrat', sans-serif;
  background-color: var(--dark-bg);
  color: var(--text-light);
  overflow-x: hidden;
}

h1,
h2,
h3,
h4,
h5,
h6 {
  font-family: 'Playfair Display', serif;
}

.landing-page {
  width: 100%;
  overflow-x: hidden;
}

/* =============================
   NAVBAR
   ============================= */
.navbar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  padding: 1.5rem 5%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 1000;
  transition: all 0.4s ease;
  background: transparent;
}

.navbar.scrolled {
  background: rgba(10, 10, 10, 0.95);
  backdrop-filter: blur(10px);
  padding: 1rem 5%;
  border-bottom: 1px solid rgba(212, 165, 116, 0.1);
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
}

.logos {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.img-logo {
  width: 45px;
  height: auto;
  filter: drop-shadow(0 0 5px rgba(212, 165, 116, 0.3));
}

.nav-brand {
  display: flex;
  flex-direction: column;
}

.logo {
  color: var(--primary-gold);
  font-size: 1.5rem;
  font-weight: 700;
  letter-spacing: 2px;
  line-height: 1;
  margin: 0;
}

.logo-subtitle {
  color: var(--text-dim);
  font-size: 0.7rem;
  letter-spacing: 4px;
  text-transform: uppercase;
}

.nav-links {
  list-style: none;
  display: flex;
  gap: 2.5rem;
  align-items: center;
}

.nav-links li a {
  color: var(--text-light);
  font-size: 0.95rem;
  text-decoration: none;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 1px;
  position: relative;
  transition: color 0.3s ease;
}

.nav-links li a::after {
  content: "";
  position: absolute;
  width: 0%;
  height: 1px;
  left: 0;
  bottom: -5px;
  background-color: var(--primary-gold);
  transition: width 0.3s ease;
}

.nav-links li a:hover::after {
  width: 100%;
}

.nav-links li a:hover {
  color: var(--primary-gold);
}

.foto-wrapper-nav {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  padding: 2px;
  border: 1px solid var(--primary-gold);
  overflow: hidden;
}

.foto-usuario-nav {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  object-fit: cover;
}

/* =============================
   HERO SECTION
   ============================= */
.hero-section {
  height: 100vh;
  position: relative;
  background: url("https://static.excelenciasgourmet.com/cdn/ff/eZQ9zND5l2cqH3HmqytZ0fznNT6Mit7ml1xVYpQaWJQ/1721683343/public/2019-10/habanos-ron.jpg") no-repeat center center/cover;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.hero-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.8));
}

.hero-content {
  position: relative;
  z-index: 2;
  max-width: 800px;
  padding: 0 2rem;
  animation: fadeInUp 1s ease-out;
}

.hero-logo {
  font-size: 5rem;
  color: var(--primary-gold);
  margin-bottom: 0.5rem;
  text-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
}

.hero-subtitle {
  font-size: 1.5rem;
  letter-spacing: 8px;
  text-transform: uppercase;
  color: #fff;
  display: block;
  margin-bottom: 2rem;
}

.hero-description {
  font-size: 1.2rem;
  line-height: 1.8;
  margin-bottom: 3rem;
  color: #e0e0e0;
  font-weight: 300;
}

.hero-btn {
  display: inline-block;
  padding: 1rem 3rem;
  background: transparent;
  border: 1px solid var(--primary-gold);
  color: var(--primary-gold);
  text-decoration: none;
  text-transform: uppercase;
  letter-spacing: 2px;
  font-size: 0.9rem;
  transition: all 0.3s ease;
}

.hero-btn:hover {
  background: var(--primary-gold);
  color: #000;
  box-shadow: 0 0 20px rgba(212, 165, 116, 0.4);
}

/* =============================
   SECCIONES GENERALES
   ============================= */
section {
  padding: 6rem 0;
}

.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 2rem;
}

.section-title {
  font-size: 3rem;
  color: var(--primary-gold);
  text-align: center;
  margin-bottom: 1rem;
  position: relative;
  display: inline-block;
  width: 100%;
}

.section-title::after {
  content: "";
  display: block;
  width: 60px;
  height: 2px;
  background: var(--primary-gold);
  margin: 1rem auto 0;
}

.section-subtitle,
.section-intro {
  text-align: center;
  color: var(--text-dim);
  max-width: 700px;
  margin: 0 auto 4rem;
  line-height: 1.8;
  font-size: 1.1rem;
}

/* =============================
   CATÁLOGO
   ============================= */
.catalogo-section {
  background-color: #0f0f0f;
}

.filtros-container {
  display: flex;
  justify-content: center;
  gap: 1.5rem;
  margin-bottom: 3rem;
  flex-wrap: wrap;
}

.search-wrapper {
  position: relative;
  width: 300px;
}

.search-icon {
  position: absolute;
  left: 1rem;
  top: 50%;
  transform: translateY(-50%);
  color: var(--text-dim);
}

.input-busqueda,
.select-categoria,
.filtro-precio {
  background: #1a1a1a;
  border: 1px solid #333;
  color: #fff;
  padding: 0.8rem 1rem;
  border-radius: 4px;
  font-family: 'Montserrat', sans-serif;
  outline: none;
  transition: border-color 0.3s ease;
}

.input-busqueda {
  width: 100%;
  padding-left: 2.5rem;
}

.filtro-precio-container {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.filtro-precio {
  width: 100px;
}

.separator {
  color: var(--text-dim);
}

.input-busqueda:focus,
.select-categoria:focus,
.filtro-precio:focus {
  border-color: var(--primary-gold);
}

.catalogo-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
  gap: 2.5rem;
}

.producto-catalogo-card {
  background: var(--card-bg);
  border: 1px solid #222;
  border-radius: 8px;
  overflow: hidden;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  display: flex;
  flex-direction: column;
}

.producto-catalogo-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
  border-color: #333;
}

.producto-imagen {
  height: 250px;
  overflow: hidden;
  position: relative;
}

.producto-imagen img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.5s ease;
}

.producto-catalogo-card:hover .producto-imagen img {
  transform: scale(1.05);
}

.producto-info {
  padding: 1.5rem;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.producto-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 0.5rem;
}

.producto-info h3 {
  font-size: 1.2rem;
  color: #fff;
  margin: 0;
  font-weight: 600;
}

.producto-precio {
  color: var(--primary-gold);
  font-weight: 700;
  font-size: 1.1rem;
}

.producto-descripcion {
  color: var(--text-dim);
  font-size: 0.9rem;
  line-height: 1.5;
  margin-bottom: 1.5rem;
  flex: 1;
}

.btn-agregar-carrito {
  background: transparent;
  border: 1px solid var(--primary-gold);
  color: var(--primary-gold);
  padding: 0.8rem;
  width: 100%;
  cursor: pointer;
  font-weight: 600;
  text-transform: uppercase;
  font-size: 0.8rem;
  letter-spacing: 1px;
  transition: all 0.3s ease;
}

.btn-agregar-carrito:hover {
  background: var(--primary-gold);
  color: #000;
}

/* =============================
   LÍNEAS DE PRODUCTOS
   ============================= */
.productos-section {
  background-color: #141414;
}

.productos-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 3rem;
}

.producto-card {
  background: #0a0a0a;
  border-radius: 12px;
  overflow: hidden;
  border: 1px solid #222;
  transition: all 0.3s ease;
}

.producto-card:hover {
  border-color: var(--primary-gold);
  transform: translateY(-5px);
}

.card-image-wrapper {
  height: 250px;
  overflow: hidden;
}

.card-image-wrapper img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.5s ease;
}

.producto-card:hover .card-image-wrapper img {
  transform: scale(1.1);
}

.card-content {
  padding: 2rem;
  text-align: center;
}

.card-content h3 {
  color: var(--primary-gold);
  font-size: 1.5rem;
  margin-bottom: 1rem;
}

.card-content p {
  color: var(--text-dim);
  line-height: 1.6;
}

/* =============================
   ORIGEN & EXPERIENCIA
   ============================= */
.origen-section,
.experiencia-section {
  background-color: #0a0a0a;
  position: relative;
}

.features-grid,
.experience-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2rem;
}

.feature-card,
.experience-card {
  background: rgba(255, 255, 255, 0.03);
  padding: 2.5rem;
  border-radius: 8px;
  border: 1px solid rgba(255, 255, 255, 0.05);
  transition: all 0.3s ease;
}

.feature-card:hover,
.experience-card:hover {
  background: rgba(255, 255, 255, 0.05);
  border-color: var(--primary-gold);
}

.feature-icon {
  font-size: 2.5rem;
  margin-bottom: 1.5rem;
  color: var(--primary-gold);
}

.feature-card h3,
.experience-card h3 {
  color: #fff;
  font-size: 1.3rem;
  margin-bottom: 1rem;
}

.feature-card p,
.experience-card p {
  color: var(--text-dim);
  line-height: 1.7;
  font-size: 0.95rem;
}

.quote-container {
  margin-top: 4rem;
  padding: 3rem;
  background: linear-gradient(135deg, #1a1a1a, #0f0f0f);
  border-left: 4px solid var(--primary-gold);
  text-align: center;
  border-radius: 0 8px 8px 0;
}

.quote-container blockquote {
  font-family: 'Playfair Display', serif;
  font-size: 1.5rem;
  font-style: italic;
  color: #fff;
  margin-bottom: 1rem;
}

.quote-container cite {
  color: var(--primary-gold);
  font-size: 0.9rem;
  text-transform: uppercase;
  letter-spacing: 2px;
}

/* =============================
   CARRITO FLOTANTE
   ============================= */
.carrito-flotante {
  position: fixed;
  top: 100px;
  right: 20px;
  width: 380px;
  background: rgba(20, 20, 20, 0.95);
  backdrop-filter: blur(10px);
  border: 1px solid #333;
  border-radius: 12px;
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
  z-index: 1000;
  max-height: 80vh;
  overflow-y: auto;
  animation: slideInRight 0.3s ease;
}

/* =============================
   FOOTER
   ============================= */
.footer {
  background-color: #050505;
  padding: 4rem 0 2rem;
  border-top: 1px solid #222;
}

.footer-content {
  max-width: 1200px;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.footer-brand h2 {
  color: var(--primary-gold);
  font-size: 2rem;
  letter-spacing: 3px;
  margin-bottom: 0;
}

.footer-brand span {
  color: var(--text-dim);
  font-size: 0.8rem;
  letter-spacing: 4px;
  text-transform: uppercase;
  display: block;
  margin-bottom: 2rem;
}

.footer-icons {
  display: flex;
  gap: 2rem;
  margin-bottom: 2rem;
}

.footer-icons img {
  width: 30px;
  height: 30px;
  border-radius: 50%;
  transition: transform 0.3s ease;
  filter: grayscale(100%);
}

.footer-icons a:hover img {
  transform: scale(1.2);
  filter: grayscale(0%);
}

.footer-info p {
  color: #666;
  font-size: 0.9rem;
  margin-bottom: 0.5rem;
}

/* =============================
   ANIMATIONS
   ============================= */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }

  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideInRight {
  from {
    opacity: 0;
    transform: translateX(20px);
  }

  to {
    opacity: 1;
    transform: translateX(0);
  }
}

/* =============================
   RESPONSIVE
   ============================= */
@media (max-width: 768px) {
  .navbar {
    padding: 1rem;
    flex-direction: column;
    background: rgba(10, 10, 10, 0.95);
    height: auto;
  }

  .nav-links {
    margin-top: 1rem;
    gap: 1.5rem;
    flex-wrap: wrap;
    justify-content: center;
  }

  .hero-logo {
    font-size: 3rem;
  }

  .hero-subtitle {
    font-size: 1rem;
  }

  .section-title {
    font-size: 2.2rem;
  }

  .filtros-container {
    flex-direction: column;
    align-items: center;
  }

  .search-wrapper,
  .select-categoria {
    width: 100%;
    max-width: 300px;
  }
}

/* =============================
   CONTACTO
   ============================= */
.contact-section {
  background-color: #050505;
  position: relative;
  padding: 6rem 0;
}

.contact-form-container {
  max-width: 600px;
  margin: 0 auto;
  background: #141414;
  padding: 3rem;
  border-radius: 12px;
  border: 1px solid #222;
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
}

.form-group-contacto {
  margin-bottom: 1.5rem;
  text-align: left;
}

.form-group-contacto label {
  display: block;
  color: var(--primary-gold);
  margin-bottom: 0.5rem;
  font-size: 0.9rem;
  font-weight: 500;
}

.form-group-contacto input,
.form-group-contacto textarea {
  width: 100%;
  padding: 1rem;
  background: #0a0a0a;
  border: 1px solid #333;
  border-radius: 6px;
  color: #fff;
  font-family: 'Montserrat', sans-serif;
  font-size: 1rem;
  transition: all 0.3s ease;
}

.form-group-contacto input:focus,
.form-group-contacto textarea:focus {
  outline: none;
  border-color: var(--primary-gold);
  box-shadow: 0 0 0 2px rgba(212, 165, 116, 0.1);
}

.form-group-contacto textarea {
  min-height: 150px;
  resize: vertical;
}

.btn-enviar-contacto {
  width: 100%;
  padding: 1rem;
  background: var(--primary-gold);
  color: #000;
  border: none;
  border-radius: 6px;
  font-weight: 600;
  font-size: 1rem;
  text-transform: uppercase;
  letter-spacing: 1px;
  cursor: pointer;
  transition: all 0.3s ease;
}

.btn-enviar-contacto:hover {
  background: var(--secondary-gold);
  transform: translateY(-2px);
  box-shadow: 0 5px 15px rgba(212, 165, 116, 0.3);
}

.btn-enviar-contacto:disabled {
  opacity: 0.7;
  cursor: not-allowed;
  transform: none;
}

.mensaje-exito,
.mensaje-error {
  padding: 1rem;
  border-radius: 6px;
  margin-bottom: 1.5rem;
  text-align: center;
  font-weight: 500;
}

.mensaje-exito {
  font-size: 0.8rem;
  letter-spacing: 4px;
  text-transform: uppercase;
  display: block;
  margin-bottom: 2rem;
}

.footer-icons {
  display: flex;
  gap: 2rem;
  margin-bottom: 2rem;
}

.footer-icons img {
  width: 30px;
  height: 30px;
  border-radius: 50%;
  transition: transform 0.3s ease;
  filter: grayscale(100%);
}

.footer-icons a:hover img {
  transform: scale(1.2);
  filter: grayscale(0%);
}

.footer-info p {
  color: #666;
  font-size: 0.9rem;
  margin-bottom: 0.5rem;
}

/* =============================
   ANIMATIONS
   ============================= */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }

  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideInRight {
  from {
    opacity: 0;
    transform: translateX(20px);
  }

  to {
    opacity: 1;
    transform: translateX(0);
  }
}

/* =============================
   RESPONSIVE
   ============================= */
@media (max-width: 768px) {
  .navbar {
    padding: 1rem;
    flex-direction: column;
    background: rgba(10, 10, 10, 0.95);
    height: auto;
  }

  .nav-links {
    margin-top: 1rem;
    gap: 1.5rem;
    flex-wrap: wrap;
    justify-content: center;
  }

  .hero-logo {
    font-size: 3rem;
  }

  .hero-subtitle {
    font-size: 1rem;
  }

  .section-title {
    font-size: 2.2rem;
  }

  .filtros-container {
    flex-direction: column;
    align-items: center;
  }

  .search-wrapper,
  .select-categoria {
    width: 100%;
    max-width: 300px;
  }
}

